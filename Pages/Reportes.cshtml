@page
@model CoreFixWeb.Pages.ReportesModel
@using Microsoft.AspNetCore.Mvc.Rendering

<h1>Administración de Reportes</h1>

@if (Model.RolUsuario == "Empleado")
{
    <h3>Agregar nuevo reporte</h3>
    <form method="post">
        <div class="form-group">
            <label asp-for="NuevoReporte.ID_equipo">Equipo</label>
            <select asp-for="NuevoReporte.ID_equipo" asp-items="Model.Equipos" class="form-control">
                <option value="">Seleccione un equipo</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="NuevoReporte.Descripcion">Descripción</label>
            <textarea asp-for="NuevoReporte.Descripcion" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Agregar Reporte</button>
    </form>
    <hr />
}

<h3>Reportes existentes</h3>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Usuario</th>
            <th>Equipo</th>
            <th>Estado</th>
            <th>Técnico Asignado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reporte in Model.Reportes)
        {
            <tr>
                <td>@reporte.ID_reporte</td>
                <td>@reporte.Descripcion</td>
                <td>@reporte.Fecha_reporte.ToShortDateString()</td>
                <td>@reporte.Usuario?.Nombre</td>
                <td>@reporte.Equipo?.Nombre</td>
                <td>@reporte.EstadoReporte?.Estado</td>
                <td>
                    @(reporte.TecnicoAsignado != null ? reporte.TecnicoAsignado.Nombre : "No asignado")
                </td>
                <td>
                    @* Supervisor: Validar *@
                    @if (Model.RolUsuario == "Supervisor" && reporte.ID_estado_reporte == 1)
                    {
                        <form method="post" asp-page-handler="Validar" asp-route-id="@reporte.ID_reporte" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-success">Validar</button>
                        </form>
                    }

                    @* Ingeniero: Asignar Técnico *@
                    @if (Model.RolUsuario == "Ingeniero" && reporte.ID_estado_reporte == 2)
                    {
                        <form method="post" asp-page-handler="Asignar" style="display:inline;">
                            <input type="hidden" name="id" value="@reporte.ID_reporte" />
                            <select name="idTecnico" class="form-select d-inline w-auto">
                                @foreach (var tecnico in Model.TecnicosDisponibles)
                                {
                                    <option value="@tecnico.Value">@tecnico.Text</option>
                                }
                            </select>
                            <button type="submit" class="btn btn-sm btn-warning">Asignar</button>
                        </form>
                    }

                    @* Técnico: Actualizar estado *@
                    @if (Model.RolUsuario == "Técnico" && reporte.ID_tecnico_asignado == Model.ID_usuario_logueado)
                    {
                        <form method="post" asp-page-handler="ActualizarEstado" style="display:inline;">
                            <input type="hidden" name="id" value="@reporte.ID_reporte" />
                            <select name="nuevoEstado" class="form-select d-inline w-auto">
                                @if (reporte.ID_estado_reporte == 4)
                                {
                                    <option value="4" selected>En Proceso</option>
                                }
                                else
                                {
                                    <option value="4">En Proceso</option>
                                }

                                @*if (reporte.ID_estado_reporte == 5)
                                {
                                    <option value="5" selected>Finalizado</option>
                                }
                                else
                                {
                                    <option value="5">Finalizado</option>
                                }*@
                            </select>
                            <button type="submit" class="btn btn-sm btn-info">Actualizar</button>
                        </form>
                    }

                    @* Empleado: Eliminar *@
                    @if (Model.RolUsuario == "Empleado")
                    {
                        <form method="post" asp-page-handler="Eliminar" asp-route-id="@reporte.ID_reporte" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
