@page
@model CoreFixWeb.Pages.Supervisor.ReportesModel
@{
    Layout = "_Layout";
}

<h2>Reportes</h2>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Folio</th>
            <th>Empleado</th>
            <th>Equipo</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Evidencias</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Reportes)
        {
            <tr>
                <td>@r.Numero_Reporte</td>
                <td>@r.Usuario?.Nombre</td>
                <td>@r.Equipo?.Nombre</td>
                <td>@r.Descripcion</td>
                <td>@r.Fecha_reporte.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@r.EstadoReporte.Estado</td>
                <td>
                    @if (r.Evidencias?.Any() == true)
                    {
                        <ul>
                            @foreach (var evidencia in r.Evidencias)
                            {
                                <li>
                                    <a href="@evidencia.Ruta" target="_blank">Evidencia @evidencia.Numero_Evidencia</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="badge bg-warning">Sin evidencias</span>
                    }
                </td>
                <td>
                    @if (r.ID_estado_reporte == 1)
                    {
                        <form method="post" asp-page-handler="Validar" asp-route-id="@r.ID_reporte" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-success">Validar</button>
                        </form>
                        <form method="post" asp-page-handler="Rechazar" asp-route-id="@r.ID_reporte" 
                            style="display:inline;" onsubmit="return confirm('¿Seguro que deseas rechazar este reporte?');">
                            <button type="submit" class="btn btn-sm btn-danger">Rechazar</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">N/A</span>
                    }
                    
                    <a class="btn btn-sm btn-secondary ms-1" asp-page="./Detalles" asp-route-id="@r.ID_reporte">Ver</a>

                    @if (r.ID_estado_reporte == 5 || r.ID_estado_reporte == 6 || r.ID_estado_reporte == 7)
                    {
                        <form method="post" asp-page-handler="Eliminar" asp-route-id="@r.ID_reporte"
                            style="display:inline;" class="ms-1" onsubmit="return confirm('¿Eliminar reporte?');">
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>