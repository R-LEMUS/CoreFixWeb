@page
@model CoreFixWeb.Pages.Empleado.ReportesModel
@{
    Layout = "_Layout";
}

<h2>Mis Reportes</h2>

@if (TempData["MensajeExito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["MensajeExito"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["MensajeError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["MensajeError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<a class="btn btn-sm btn-primary" asp-page="/Empleado/NuevoReporte">Crear Reporte</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Folio</th>
            <th>Fecha</th>
            <th>Equipo</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Evidencias</th>
            <th>Prioridad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Reportes)
        {
            <tr>
                <td>@r.Numero_Reporte</td>
                <td>@r.Fecha_reporte.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@r.Equipo?.Nombre</td>
                <td>@r.Descripcion</td>
                <td><span class="badge bg-info">@r.EstadoReporte.Estado</span></td>
                <td>
                    @if (r.Evidencias != null && r.Evidencias.Any())
                    {
                        <ul>
                            @foreach (var e in r.Evidencias)
                            {
                                <li>
                                    <a href="@e.Ruta" target="_blank">Evidencia @e.Numero_Evidencia</a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="badge bg-warning">——————</span>
                    }
                </td>
                <td>
                    @switch (r.Prioridad)
                    {
                        case "Critica":
                            <span class="badge bg-danger">Crítica</span>
                            break;
                        case "Alta":
                            <span class="badge bg-warning text-dark">Alta</span>
                            break;
                        case "Media":
                            <span class="badge bg-warning">Media</span>
                            break;
                        case "Baja":
                            <span class="badge bg-success">Baja</span>
                            break;
                        default:
                            <span class="badge bg-secondary">—————</span>
                            break;
                    }
                </td>
                <td>
                    @if (r.ID_estado_reporte == 7)
                    {
                        <form method="post" asp-page-handler="Reenviar" asp-route-id="@r.ID_reporte"
                            style="display:inline;" onsubmit="return confirm('¿Seguro que deseas reenviar este reporte?');">
                            <button type="submit" class="btn btn-sm btn-primary">Reenviar</button>
                        </form>
                    }
                    else 
                    {
                        <a class="btn btn-sm btn-primary" asp-page="./SubirEvidencias" asp-route-id="
                        @r.ID_reporte">Subir Evidencias</a>
                    }
                    <form method="post" asp-page-handler="Eliminar" asp-route-id="@r.ID_reporte" 
                        style="display:inline;" onsubmit="return confirm('¿Seguro que deseas eliminar este reporte?');">
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>